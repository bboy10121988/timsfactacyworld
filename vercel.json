{
  "version": 2,
  "name": "medusa-backend",
  "buildCommand": "cd backend && npm run build",
  "outputDirectory": "backend/dist",
  "installCommand": "npm install --legacy-peer-deps && cd backend && npm install --legacy-peer-deps",
  "framework": null,
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/admin/(.*)",
      "dest": "/api?admin=$1"
    },
    {
      "src": "/store/(.*)", 
      "dest": "/api?store=$1"
    },
    {
      "src": "/auth/(.*)",
      "dest": "/api?auth=$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api?uploads=$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api?path=$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
