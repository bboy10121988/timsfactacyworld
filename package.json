{
  "name": "medusa-ecpay-project",
  "version": "1.0.0",
  "description": "Medusa + Next.js + ECPay 電商專案",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "install:all": "yarn install && yarn install:backend && yarn install:frontend",
    "install:backend": "cd backend && yarn install",
    "install:frontend": "cd frontend && yarn install",
    "dev": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:integrated": "concurrently \"yarn dev:backend\" \"yarn dev:frontend\"",
    "dev:backend": "cd backend && yarn dev",
    "dev:frontend": "cd frontend && yarn dev",
    "build": "yarn build:backend && yarn build:frontend",
    "build:backend": "cd backend && yarn build",
    "build:frontend": "cd frontend && yarn build",
    "deploy:setup": "echo '請先在 Vercel 和 GitHub Pages 設定部署環境，詳情請參考 DEPLOYMENT.md'",
    "deploy:frontend": "cd frontend && yarn build",
    "deploy:backend": "echo '後端自動部署到 Vercel，請確認環境變數已設定'"
  },
  "dependencies": {
    "ecpay_aio_nodejs": "^1.2.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "resolutions": {
    "zod": "3.23.8",
    "zod-validation-error": "3.4.1"
  },
  "engines": {
    "node": ">=20",
    "yarn": ">=1.22.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
